<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.application.water.admin_logged_in">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true">

    <Button
        android:id="@+id/add_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:onClick="choosen_add_user"
        android:text="Add member" />

    <Button
        android:id="@+id/add_user_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="choosen_add_user_data"
        android:padding="5dp"
        android:text="Add member data" />

    <Button
        android:id="@+id/generate_bill"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:onClick="generate_statement"
        android:padding="5dp"
        android:text="Generate Bill" />

    <Button
        android:id="@+id/change_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/button_round"
        android:onClick="change"
        android:padding="5dp"
        android:text="EDIT PROFILE"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/change_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_round"
        android:onClick="change_method"
        android:padding="5dp"
        android:text="Change Pricing Method"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/update_Balance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/button_round"
        android:onClick="change_balance"
        android:padding="5dp"
        android:text="Change Balance"
        android:textColor="@android:color/white" />

</RelativeLayout>
</ScrollView>